@model IList<Webmotors.Models.Anuncio>

@{
    ViewBag.Title = "Anúncios";
}

<h2>Anúncios</h2>


<div style="margin-bottom: 20px;">
    <a href="@Url.Action("AddEdit")">Novo Anúncio</a>
</div>

<table class="table" id="tbAnuncio">
    <thead>
        <tr>
            <th>ID</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Versão</th>
            <th>Ano</th>
            <th>Quilometragem</th>
            <th>Observação</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="item-@item.ID">
                <td>@item.ID</td>
                <td>@item.marca</td>
                <td>@item.modelo</td>
                <td>@item.versao</td>
                <td>@item.ano</td>
                <td>@item.quilometragem</td>
                <td>@item.observacao</td>
                <td>
                    <a href="@Url.Action("AddEdit", new { id = item.ID})">Editar</a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", new { id = item.ID})">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>